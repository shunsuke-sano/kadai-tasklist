<% if logged_in? %>
  <h1>タスク一覧</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>  
  </ul>

  <%= link_to 'タスクの新規作成', new_task_path %>
  
  <%= link_to 'Log out', logout_path, method: :delete %>
<% end %>